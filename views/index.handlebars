<div class="row">
  <div class="col-md-6">
    <div class="box">
      <h2>Burger Queue</h2>
      <div class="burgers list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger}}
        {{/unless}}
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="box">
      <h2>Burgers Devoured!</h2>
      <div class="burgers list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger}}
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <div class="box-form">
      <form class="create-form">
        <h2>Add a Burger</h2>
        <div class="form-group">
          <input type="text" id="burger_name" name="burger_name" class="form-control">
          <div class="invalid-feedback">
            Please provide a burger name
          </div>
        </div>
        <p class="text-center">
          <button type="submit">Submit</button>
        </p>
      </form>
    </div>
  </div>
</div>